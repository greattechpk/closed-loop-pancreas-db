<h1>Create Settings</h1>

<form action="/settings/{{singleGlobal._id}}?_method=PUT" method="POST">
    <diV class="form-group">
        <label>Carb Ratio</label>
        <span>1 Unit Per : <input type="number" name="carbRatio" value="{{singleGlobal.carbRatio}}"/> Grams</span>
    </diV>
    <div class="form-group">
        <label>Correction Factor</label>
        <span>BG - <input type="number" name="correctionSubtract" value="{{singleGlobal.correctionSubtract}}" /> / <input type="number" name="correctionDivisor" value="{{singleGlobal.correctionDivisor}}"/></span>
    </div>
    <div class="form-group">
        <label>Insulin Type</label>
        <input type="text" name="insulinType" value="{{singleGlobal.insulinType}}"/>
        <label>Insulin Activity Length</label>
        <input type="number" name="insulinActivityLength" value="{{singleGlobal.insulinActivityLength}}"/>
    </div>
    <input type="submit" value="Save" />
</form>