<h1>Create Settings</h1>

<form action="/settings" method="POST">
    <diV class="form-group">
        <label>Carb Ratio</label>
        <span>1 Unit Per : <input type="number" name="carbRatio" /> Grams</span>
    </diV>
    <div class="form-group">
        <label>Correction Factor</label>
        <span>BG - <input type="number" name="correctionSubtract" /> / <input type="number" name="correctionDivisor" /></span>
    </div>
    <div class="form-group">
        <label>Insulin Type</label>
        <input type="text" name="insulinType" />
        <label>Insulin Activity Length</label>
        <input type="number" name="insulinActivityLength" />
    </div>
    <input type="submit" value="Create" />
</form>