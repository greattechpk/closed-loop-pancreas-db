<div class="all-items food">
    <div class="item-group food">
        <div class="item food">
            <div class="label">Name</div>
            <div class="data name">{{singleFood.name}}</div>
        </div>

        <div class="item food">
            <div class="label">Carbohydrates</div>
            <div class="data">{{singleFood.carbValue}}g</div>
        </div>

        <div class="item food">
            <div class="label">Is Beverage?</div>
            <div class="data capital">{{singleFood.isBeverage}}</div>
        </div>
    </div>
    <div class="item-group food-buttons">
        <a href="/food/{{singleFood._id}}/edit">
            <button>
                Edit
            </button>
        </a>
        <form action="/food/{{_id}}?_method=DELETE" method="POST">
            <input type="submit" value="Delete">
        </form>
    </div>
</div>